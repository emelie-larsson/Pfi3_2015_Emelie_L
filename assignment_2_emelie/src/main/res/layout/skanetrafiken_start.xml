<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/background_light"
    android:id="@+id/skanetrafiken_start">


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="45dp"
        android:clickable="true"
        android:src="@drawable/forstoringsglas"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="75dp"
        android:clickable="true"
        android:src="@drawable/klocka"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:clickable="true"
        android:src="@drawable/kalender"
        android:scaleType="fitXY"
        android:padding="0dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton4"
        android:layout_marginRight="22dp"
        android:clickable="true"
        android:src="@drawable/biljetter"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidtabeller"
        android:textSize ="16dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biljetter"
        android:textSize ="16dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hållplatssök"
        android:textSize ="16dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButton2"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reseplanerare"
        android:textSize ="16dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />


</RelativeLayout>
