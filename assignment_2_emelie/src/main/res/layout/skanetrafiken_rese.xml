<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emeli_000.assignment_2_emelie.SkanetrafikenStart">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="580dp"
        android:background="@android:color/background_light"
        android:layout_gravity="left|bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView10"
            android:layout_gravity="right|center_vertical"
            android:background="@android:color/darker_gray"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="Reseplaneraren"
            android:textColor="#ffffff"
            android:id="@+id/textView6"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Från:"
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:layout_marginLeft="30dp"
            style="@android:style/TextAppearance.DeviceDefault"
            android:layout_above="@+id/editText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Till:"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:layout_marginTop="180dp"
            android:layout_alignStart="@+id/textView7"
            style="@android:style/TextAppearance.DeviceDefault" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/textView7"
            android:editable="true"
            android:layout_alignEnd="@+id/textView6" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:id="@+id/editText2"
            android:layout_alignBottom="@+id/textView8"
            android:editable="true"
            android:layout_alignEnd="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trafikslag"
            android:textSize="18dp"
            android:id="@+id/textView12"
            android:layout_above="@+id/button2"
            android:layout_alignStart="@+id/button2" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="sök"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ändra"
            android:id="@+id/button2"
            android:layout_marginLeft="225dp"
            android:layout_above="@+id/spinner"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginBottom="86dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sök resa:"
            android:id="@+id/textView13"
            android:layout_above="@+id/editText"
            android:layout_alignStart="@+id/textView7" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avgång"
            android:id="@+id/radioButton"
            android:checked="true"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignStart="@+id/radioButton2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ankomst"
            android:id="@+id/radioButton2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignEnd="@+id/textView13" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/Favoritresor"
            android:spinnerMode="dropdown"
            android:layout_above="@+id/button3"
            android:layout_alignStart="@+id/spinner2" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:entries="@array/Bevakningar"
            android:spinnerMode="dropdown"
            android:layout_above="@+id/spinner"
            android:layout_alignStart="@+id/button3" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:entries="@array/Tidpunkt"
            android:layout_below="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />

    </RelativeLayout>

</FrameLayout>
